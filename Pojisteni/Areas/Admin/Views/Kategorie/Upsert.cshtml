@model Pojisteni.Models.Kategorie

@{
    var title = "Vytvořit nový typ";
}

<form method="post" asp-action="Upsert">  
    <input asp-for="KategorieId" hidden />
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.KategorieId != 0)
        {
            //EDIT
            title = "Upravit typ";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Typ"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Typ" class="form-control" />
                    <span asp-validation-for="Typ" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4 mt-3">
                    @if (Model.KategorieId != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.KategorieId"/>
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton"/>
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
