@model IEnumerable<Pojisteni.Models.Pojistka>

<div class="text-center">
    <h1 class="text-primary pt-3">Typy pojištění</h1>
    <br />
</div>

<div class="row pb-3">
    @foreach (var pojistka in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" id="kartaPojisteni">
                    <div class="card text-center" style="border:0px;">
                        <img src="@pojistka.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body">
                            <p class="card-title h3 pt-3"><strong>@pojistka.Nazev</strong></p>
                            <p class="card-title">@pojistka.Podminky</p>                    
                            <p style="font-size: 1.2em"><b>@pojistka.Zaloha.ToString(),- Kč</b></p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@pojistka.PojisteniId">DETAILY</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>